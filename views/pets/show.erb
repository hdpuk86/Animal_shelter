<nav class="nav--second">
  <button class="button button--second"><a href="/pets/<%=@pet.id%>/edit">Edit <%=@pet.name%></a></button>
  <form class="delete" action="/pets/<%=@pet.id()%>/delete" method="post">
    <button class="button button--second" type="submit">Delete <%=@pet.name%></button>
  </form>
</nav>

<h1><%=@pet.name()%></h1>
<article>
  <p><%=@pet.name()%> is a <%=@pet.breed()%></p>
  <p>Admission Date: <%=@pet.admission_date%></p>
  <%if @pet.status == "Adopted"%>
    <p><%=@pet.name%> was adopted by <%=@pet.owner%></p>
  <%else%>
    <p><%=@pet.name%> is currently <%=@pet.status%></p>
  <%end%>
</article>
