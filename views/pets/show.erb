<nav class="nav--second">
  <h1><%=@pet.name()%></h1>
  <button class="button"><a href="/pets/<%=@pet.id%>/edit">Edit <%=@pet.name%></a></button>
  <button class="button"><a href="#">Delete <%=@pet.name%></a></button>
</nav>

<article>
  <p><%=@pet.name()%> is a <%=@pet.breed()%></p>
  <p>Admission Date: <%=@pet.admission_date%></p>
  <%if @pet.status == "Adopted"%>
    <p><%=@pet.name%> was adopted by <%=@pet.owner%></p>
  <%else%>
    <p><%=@pet.name%> is currently <%=@pet.status%></p>
  <%end%>
</article>
