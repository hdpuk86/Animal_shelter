<nav class="nav--second">
  <button class="button button--second"><a href="/pets/<%=@pet.id%>/edit">Edit <%=@pet.name%></a></button>
  <button class="button button--second"><a href="/pets/<%=@pet.id%>/delete">Delete <%=@pet.name%></a></button>
</nav>

<h1><%=@pet.name()%></h1>
<article>
  <div class="image">
    <img class="petPhoto"src="<%=@pet.image%>" alt="pet photo">
  </div>
  <div class="text">
    <p>Name: <%=@pet.name()%></p>
    <p>Breed: <%=@pet.breed()%></p>
    <p>Admission Date: <%=@pet.admission_date%></p>
    <p>Age: <%=@pet.age()%></p>
    <p>Sex: <%=@pet.sex()%></p>
    <p>Child friendly: <%=@pet.child_friendly%></p>
    <p>Good with other animals: <%=@pet.animal_friendly%></p>
    <p>Require more training: <%=@pet.requires_training%></p>
    <%if @pet.status == "Adopted"%>
    <p>Status: Adopted by <%=@pet.owner%></p>
    <%else%>
    <p>Status: <%=@pet.status%></p>
    <%end%>
  </div>
</article>
