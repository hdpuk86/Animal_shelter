<nav class="nav--second">
  <button class="button button--second"><a href="/pets">View All</a></button>
  <button class="button button--second"><a href="/pets/adoptable">View Adoptable</a></button>
  <button class="button button--second"><a href="pets/new">Add New Pet</a></button>
</nav>
<div class="table">
  <table>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Type</th>
        <th>Breed</th>
        <th>Admission Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    <%@pets = @pets.sort_by {|pet| pet.admission_date()}%>
    <%for pet in @pets%>
      <tr class="bodyRows">
        <td><img class="petPhoto" src="<%=pet.image%>" alt="pet picture"></td>
        <td><%=pet.name%></td>
        <td><%=pet.type%></td>
        <td><%=pet.breed%></td>
        <td><%=pet.admission_date%></td>
        <td><%=pet.status%></td>
        <td><a href="/pets/<%=pet.id%>">Show Details</a></td>
      </tr>
      <%end%>
  </table>
</div>
