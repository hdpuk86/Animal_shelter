<nav class="nav--second"><h1>PETS</h1>
<a href="pets/new">Add New Pet</a>
</nav>
<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Breed</th>
    <th>Admission Date</th>
    <th>Status</th>
  </tr>
  <%for pet in @pets%>
    <%unless pet.status == "Adopted"%>
    <tr>
      <td><%=pet.name%></td>
      <td><%=pet.type%></td>
      <td><%=pet.breed%></td>
      <td><%=pet.admission_date%></td>
      <td><%=pet.status%></td>
      <td><a href="/pets/<%=pet.id%>">Show Details</a></td>
        <!-- <td><a href="#">Edit</a></td>
        <td><a href="#">Delete</a></td> -->
    </tr>
    <%end%>
  <%end%>
</table>
